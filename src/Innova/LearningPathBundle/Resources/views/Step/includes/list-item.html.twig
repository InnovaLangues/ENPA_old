{% for step in steps %}
    <li class="editable-item" node_id="{{ step.id }}"> <i class="icon-trash delete-item"></i> <i class="icon-briefcase"></i>
    	<span class='descr'>{{ step.name }}</span>
        {% if step.children %}
            <ul class="sortable tree ui-sortable">
                {% include "InnovaLearningPathBundle:Step:includes/list-item.html.twig" with {'steps': step.children} only %}
            </ul>
        {% endif %}
    </li>
{% endfor %}