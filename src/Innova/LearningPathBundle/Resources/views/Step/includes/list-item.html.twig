{% for step in steps %}
    <li class="editable-item" node_id="{{ step.id }}"><i class="icon-trash delete-item"></i> <span class="descr"><a href="#{{step.name}}" class="parcours-item">{{ step.name }}</a></span><i class="icon-plus add-child"></i>
        {% if step.children %}
            <ul class="sortable tree ui-sortable">
                {% include "InnovaLearningPathBundle:Step:includes/list-item.html.twig" with {'steps': step.children} only %}
            </ul>
        {% endif %}
    </li>
{% endfor %}