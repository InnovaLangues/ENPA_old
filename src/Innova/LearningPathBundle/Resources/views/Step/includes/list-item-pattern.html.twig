{% for step in steps %}
    <li class="new-item ui-draggable" node_id=""><span class='descr'><a href="#{{step.name}}" class="parcours-item">{{ step.name }}</a></span> <span class="step-buttons cache"><i class="icon-plus add-child"></i><i class="icon-pencil edit-step"></i><i class="icon-trash delete-item"></i></span>
        {% if step.children %}
            <ul class="">
            	{% include "InnovaLearningPathBundle:Step:includes/list-item-pattern.html.twig" with {'steps': step.children} only %}
            </ul>
        {% endif %}
    </li>
{% endfor %}