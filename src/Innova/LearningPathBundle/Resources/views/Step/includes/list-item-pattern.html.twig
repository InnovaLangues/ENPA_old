{% for step in steps %}
    <li class="new-item ui-draggable" node_id="{{ step.id }}"><i class="icon-trash delete-item cache"></i> <span class='descr'><a href="#{{step.name}}" class="parcours-item">{{ step.name }}</a></span>
        {% if step.children %}
            <ul class="">
            	{% include "InnovaLearningPathBundle:Step:includes/list-item-pattern.html.twig" with {'steps': step.children} only %}
            </ul>
        {% endif %}
    </li>
{% endfor %}