            <h4 class="nameRessourcesReelles">Test2</h4>
            <div class="well otherss">
                <ul class="concrete">
                    <li><i class="icon-film"></i> Fichier vidéo</li>
                    <li><i class="icon-music"></i> Fichier audio</li>
                    <li><i class="icon-picture"></i> Fichier image</li>
                    <li><i class="icon-file"></i> Fichier texte</li>
                    <li><i class="icon-print"></i> Fichier PDF</li>
                    <li><i class="icon-globe"></i> Lien</li>
                </ul>
                <input type="file">
            </div>
