{% extends '::base.html.twig' %}

{% block body %}

<div class="container">

    {% include "InnovaLearningPathBundle::Step/left-sidebar.html.twig" %}
    {% include "InnovaLearningPathBundle::Step/right-sidebar.html.twig" %}

    <select name="view-choice">
        <option selected value="Vue concepteur">Vue concepteur</option>
